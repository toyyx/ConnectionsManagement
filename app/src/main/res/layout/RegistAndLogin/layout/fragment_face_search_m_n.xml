<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="人  群  搜  索 ( M : N )"
        android:gravity="center"
        android:layout_margin="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent_dark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="搜  索  图  片："
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/faceSearch_M_N_Image_ImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/plus_sign"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/transparent_dark"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent_dark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/communicate_rec"
        android:layout_margin="8dp"
        android:layout_weight="3"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="搜  索  结  果"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/faceSearch_M_N_resultTips_TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请上传图片开始搜索..."
            android:textSize="20sp"
            android:gravity="start"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/faceSearch_M_N_showResult_RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent_dark"/>
    <Button
        android:id="@+id/faceSearch_M_N_startSearch_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始搜索"
        android:layout_margin="10dp"/>
</LinearLayout>