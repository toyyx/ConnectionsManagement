<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f1f6"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="人  脸  对  比"
        android:gravity="center"
        android:layout_margin="10dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="9dp"
        android:background="#f2f1f6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"

        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="对  比  图  片  1："
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/faceMatch_Image_1_ImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/add2"
            android:layout_gravity="center"
            android:layout_margin="10dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="9dp"
        android:background="#f2f1f6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="8dp"

        android:background="#fff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="对  比  图  片  2："
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/faceMatch_Image_2_ImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/add2"
            android:layout_gravity="center"
            android:layout_margin="10dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="9dp"
        android:background="#f2f1f6"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/communicate_rec"
        android:layout_margin="8dp"
        android:layout_weight="2"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="对  比  结  果："
            android:textSize="20sp"
            android:gravity="center"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/faceMatch_result_TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="请上传图片开始对比..."
            android:textSize="20sp"
            android:gravity="start"
            android:background="@android:color/transparent"
            android:layout_margin="10dp" />
        <LinearLayout
            android:id="@+id/faceMatch_resultShow_LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人脸唯一标识码1："/>
                <TextView
                    android:id="@+id/faceMatch_face_token1_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="face_token1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人脸唯一标识码2："/>
                <TextView
                    android:id="@+id/faceMatch_face_token2_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="face_token2"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人脸对比分数："/>
                <TextView
                    android:id="@+id/faceMatch_score_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="score"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(参考建议:推荐以80为参考线，大于则视为相同人脸)"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_margin="9dp"
        android:background="#f2f1f6"/>
    <Button
        android:id="@+id/faceMatch_start_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开始对比"
        android:layout_margin="10dp"/>
</LinearLayout>