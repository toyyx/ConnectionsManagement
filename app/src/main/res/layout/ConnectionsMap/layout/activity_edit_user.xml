<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ConnectionsMap.EditUserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_editUser_ImageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_result_menu"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="修改个人资料"
            android:gravity="start|center"
            android:layout_margin="10dp"
            android:textSize="20sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/transparent_dark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="头    像"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/editUserImage_CircleImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_result_menu"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_dark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="用户名"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/editUserUserName_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="用户名"
            android:textSize="20sp"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_dark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓    名"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/editUserName_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="用户姓名"
            android:textSize="20sp"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_dark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="性    别"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <RadioGroup
            android:id="@+id/editUser_gender_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="start|center"
            android:layout_margin="10dp">
            <RadioButton
                android:id="@+id/editUser_gender_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="男"/>
            <RadioButton
                android:id="@+id/editUser_gender_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="女"/>
        </RadioGroup>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_dark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="电    话"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/editUserPhone_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="用户电话"
            android:textSize="20sp"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_dark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="邮    箱"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/editUserEmail_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="用户邮箱"
            android:textSize="20sp"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_dark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"/>

</LinearLayout>