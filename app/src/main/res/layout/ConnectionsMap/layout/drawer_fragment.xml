<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:elevation="3dp">
        <CheckBox
            android:id="@+id/checkBoxOfFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="朋友"/>
        <CheckBox
            android:id="@+id/checkBoxOfFamily"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲人"
            android:checked="true"
            android:layout_below="@+id/checkBoxOfFriend"/>
        <CheckBox
            android:id="@+id/checkBoxOfClassmate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同学"
            android:checked="true"
            android:layout_below="@+id/checkBoxOfFamily"/>
        <CheckBox
            android:id="@+id/checkBoxOfOther"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="其他"
            android:checked="true"
            android:layout_below="@+id/checkBoxOfClassmate"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_gravity="bottom">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="若图谱显示异常，请点击"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/drawerfragment_refresh_button"/>
        <Button
            android:id="@+id/drawerfragment_refresh_button"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:text="手动刷新"
            android:textSize="10sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ConnectionsMap"
        android:layout_width="3000dp"
        android:layout_height="3000dp"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/ConnectionsHumanMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="2dp"
            android:background="@drawable/connections_human_map_background">
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ConnectionsLineMap"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="1dp">
        </RelativeLayout>

    </RelativeLayout>

    <!-- 加载中的过场动画-->
    <FrameLayout
        android:id="@+id/loadingImage_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="4dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/transparent_dark"
            android:layout_gravity="center">
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/Widget.ProgressBar.Large"
                android:indeterminateDrawable="@drawable/custom_progress_bar" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载中"
                android:textSize="20sp"
                android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>