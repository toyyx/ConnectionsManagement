<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardPerson_HorizontalScrollView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:scrollbars="none">
    <LinearLayout
        android:id="@+id/List_frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/contentPerson_List_LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:background="@drawable/bottom_navigation_background">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cardImage"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/plus_sign"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rectangle"
                        android:text="姓名"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/cardName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_person_background"
                        android:text="人物姓名"
                        android:layout_margin="5dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关系"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/cardRelation"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_person_background"
                        android:text="人物关系"
                        android:layout_margin="5dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电话"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/cardPhoneNumber"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_person_background"
                        android:text="人物电话"
                        android:layout_margin="5dp"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注"
                        android:layout_margin="5dp"/>
                    <TextView
                        android:id="@+id/cardNotes"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/card_person_background"
                        android:text="人物备注"
                        android:layout_margin="5dp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
            <ImageButton
                android:id="@+id/toDetailPerson_List_ImageButton"
                android:layout_width="20dp"
                android:visibility="visible"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_result_menu"
                android:layout_gravity="end|center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:background="#c3d0d0"
            android:layout_height="match_parent">
            <!-- 删除按钮 -->
            <Button
                android:id="@+id/deletePerson_List_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#c3d0d0"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:text="Delete" />
        </LinearLayout>

    </LinearLayout>


</HorizontalScrollView>
