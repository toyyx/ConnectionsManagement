<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/showCommunication_HorizontalScrollView"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:scrollbars="none">
    <LinearLayout
        android:id="@+id/frameLayout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/contentCommunication_LinearLayout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/rounded_button_background">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/showCommunicationTime_TextView1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="20:00"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center"
                    android:background="@color/black"/>
                <TextView
                    android:id="@+id/showCommunicationTime_TextView2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="21:00"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/black"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/showCommunicationTitle_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="交际主题"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
                <TextView
                    android:id="@+id/showCommunicationAddress_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="交际地址"
                    android:textSize="10dp"
                    android:maxLines="1"
                    android:ellipsize="end"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/toDetailCommunication_ImageButton"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_result_menu"
                android:layout_gravity="end|center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <!-- 删除按钮 -->
            <Button
                android:id="@+id/deleteCommunication_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:text="Delete" />
        </LinearLayout>

    </LinearLayout>

</HorizontalScrollView>