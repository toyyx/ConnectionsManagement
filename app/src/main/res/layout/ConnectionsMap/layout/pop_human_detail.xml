<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:background="#f2f1f6">
    <FrameLayout
        android:id="@+id/popTitleLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="人物详情"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#3f8787"
            android:gravity="center"/>
        <Button
            android:id="@+id/popOperationButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/edit"
            android:layout_gravity="end"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/popImageLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/communicate_rec"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="头像："
            android:textColor="#000000"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/popImage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@mipmap/ic_result_menu"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/popNameLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/communicate_rec"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/popName_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:hint="人物姓名"
            android:textColor="#000"
            android:maxLength="7"
            android:singleLine="true"
            android:enabled="false"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/popRelationLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/communicate_rec"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/addGenderLinearLayout">
        <TextView
            android:id="@+id/popRelation_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:hint="人物关系"
            android:singleLine="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/popGenderLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/communicate_rec"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/popNameLinearLayout">
        <TextView
            android:id="@+id/popGender_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:hint="人物性别"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/popPhoneLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:background="@drawable/communicate_rec"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/popGenderLinearLayout">
        <TextView
            android:id="@+id/popPhone_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:hint="人物电话"
            android:textColor="#000"
            android:singleLine="true"
            android:enabled="false" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/popEmailLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="20dp"
        android:background="@drawable/communicate_rec"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/popPhoneLinearLayout">
        <TextView
            android:id="@+id/popEmail_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:hint="人物邮箱"
            android:textColor="#000"
            android:singleLine="true" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/popNotesLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/communicate_rec"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_below="@+id/popEmailLinearLayout"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/popNotes_TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="start|center"
            android:textColor="#000"
            android:hint="人物备注"
            android:maxLength="100"
            android:maxLines="3" />
    </LinearLayout>

</LinearLayout>