<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f1f6"
    android:orientation="vertical"
    tools:context=".RegisterAndLogin.EditUserActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back_editRelation_ImageView"
            android:layout_width="30dp"
            android:layout_marginLeft="8dp"
            android:layout_height="60dp"
            android:src="@drawable/exit_left_green" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="修改人际关系"
            android:gravity="start|center"
            android:layout_margin="10dp"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/sureEdit_editRelation_ImageView"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/upload"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@drawable/rectangle"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="头    像"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/editRelationImage_CircleImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_result_menu"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/communicate_rec"
        android:layout_margin="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="姓    名"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/editRelationName_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="姓名"
            android:inputType="text"
            android:textSize="20sp"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/communicate_rec"
        android:layout_margin="8dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="关    系"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <Spinner
            android:id="@+id/editRelation_Spinner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/communicate_rec"
        android:layout_margin="8dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="性    别"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <RadioGroup
            android:id="@+id/editRelation_gender_radiogroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="start|center"
            android:layout_margin="10dp">
            <RadioButton
                android:id="@+id/editRelation_gender_man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="男"/>
            <RadioButton
                android:id="@+id/editRelation_gender_woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="女"/>
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/communicate_rec"
        android:layout_margin="8dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="电    话"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/editRelationPhone_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="人物电话"
            android:inputType="text"
            android:textSize="20sp"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/communicate_rec"
        android:layout_margin="8dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="邮    箱"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/editRelationEmail_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="人物邮箱"
            android:inputType="text"
            android:textSize="20sp"
            android:gravity="start|center"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/communicate_rec"
        android:layout_margin="8dp"
        android:layout_weight="3">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="备    注"
            android:gravity="start|center"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/editRelationNotes_EditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="人物备注"
            android:textSize="20sp"
            android:gravity="start"
            android:background="@android:color/transparent"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/transparent_dark"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>
</LinearLayout>